    <!--配置通知-->
    <tx:advice id="txadvice">
        <!--配置事务参数-->
        <tx:attributes>
            <!--指定在那种规则的方法上面添加事务-->
            <tx:method name="addUser" isolation="REPEATABLE_READ"/>
